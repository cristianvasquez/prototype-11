{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "@types/jest"],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
